input {
  lumberjack {
    port => 10101
    ssl_certificate => "/opt/logstash/ssl/logstash-forwarder.crt"
    ssl_key => "/opt/logstash/ssl/logstash-forwarder.key"
  }
}

filter {
  if [type] == "journal" {
    grok {
      match => { "message" => "%{TIMESTAMP_ISO8601:timestamp} %{HOST} %{SYSLOGPROG}: %{GREEDYDATA:message}" }
      tag_on_failure => ["journal_irregular"]
    }
  }
}

output {
  elasticsearch {
    protocol => "http"
    host => "{{ .elasticsearch_host }}"
    port => 9200
  }
}
