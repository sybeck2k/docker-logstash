input {
  lumberjack {
    port => 10101
    ssl_certificate => "/opt/logstash/ssl/logstash-forwarder.crt"
    ssl_key => "/opt/logstash/ssl/logstash-forwarder.key"
  }
}

filter {
  if [type] == "journal" {
    grok {
      match => { "message" => "%{TIMESTAMP_ISO8601:syslog_timestamp} %{HOST} %{SYSLOGPROG}: %{GREEDYDATA:_remainder}" }
      add_tag => ["journal_grokked"]
    }
    mutate {
      tags => [ "journal_grokked" ]
      replace => [ "@message", "%{message_remainder}" ]
    }
    mutate {
      tags => [ "journal_grokked" ]
      remove => [ "message_remainder" ]
    }
    mutate {
      tags => [ "journal_grokked" ]
      replace => [ "@timestamp", "%{syslog_timestamp}" ]
      add_tag => ["tmatch"]
    }
    mutate {
      tags => [ "tmatch" ]
      remove => [ "syslog_timestamp" ]
    }
  }
}

output {
  elasticsearch {
    protocol => "http"
    host => "{{ .elasticsearch_host }}"
    port => 9200
  }
}
